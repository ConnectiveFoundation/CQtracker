<div class="container">
	<div class="row">
		<p id="notice"><%= notice %></p>
	</div>
	<div class="row">
		<div class="col-xs-12 col-md-4">
			<p>
			  <strong>Serial:</strong>
			  <%= @card.serial %>
			</p>
		</div>
		<div class="col-xs-12 col-md-4">
			<p>
			  <strong>Name:</strong>
			  <%= @card.name %>
			</p>
		</div>
		<div class="col-xs-12 col-md-4">
			<p>
			  <strong>Zip:</strong>
			  <%= @card.zip %>
			</p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-md-8-offset-4">
			<%= link_to 'Edit', edit_card_path(@card) %> |
			<%= link_to 'Back', cards_path %>
		</div>
	</div>
</div>