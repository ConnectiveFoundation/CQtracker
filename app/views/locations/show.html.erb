<br />
<!-- BREADCRUMB NAV -->
	<div class="row">
		<ol class="breadcrumb">
			<li><%= link_to locations_path(@location) do %>
				CQ Tracker Home
			<% end %></li>
			<li class="active"><a href="#">Show Location</a></li>
		</ol>
	</div>
	<div class="row">
		<p id="notice"><%= notice %></p>
	</div>
	<div class="row">
		<h1>Show location</h1>
	</div>
	<br />
	<div class="row">
		<div class="col-md-2">
			<p>
			  <strong>Serial Number:</strong>
			  <%= @location.serial_number %>
			</p>
		</div>
		<div class="col-md-3">
			<p>
			  <strong>Address:</strong>
			  <%= @location.address %>
			</p>
		</div>
		<div class="col-md-2">
			<p>
			  <strong>Name:</strong>
			  <%= @location.name %>
			</p>
		</div>
		<div class="col-md-2">
			<p>
			  <strong>Latitude:</strong>
			  <%= @location.latitude %>
			</p>
		</div>
		<div class="col-md-2">
			<p>
			  <strong>Longitude:</strong>
			  <%= @location.longitude %>
			</p>
		</div>
		<div class="col-md-1">
			<p>
			  <strong>Date:</strong>
			  <%= @location.created_at %>
			</p>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="pull-right">
			<%= link_to 'Edit', edit_location_path(@location), :class => "btn btn-default" %>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-md-8-offset2">
		  <div id="map" style="width: auto; height: 400px; border-radius: 10px; border: #cccccc solid 1px;"></div>
		</div>
	</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
	    {
	      "lat": <%= @location.latitude %>,
	      "lng": <%= @location.longitude %>
	    }
	  ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>